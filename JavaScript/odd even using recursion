function isEven(num)
{
    if(num<0)
    {
        console.log("Invalid number");
        return;
    }
    else{
    if(num==0){
        console.log("Even");
        return;
    }
    if(num==1){
        console.log("Odd");
        return;
    }
    isEven(num-2);
    }
}

isEven(-45);
isEven(73);